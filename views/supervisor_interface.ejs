                            <td><%= new Date(project.enddate).toLocaleDateString() %></td> <!-- End Date -->
                            <td>&#8377;<%= project.payperday %></td> 
                            <td><%= project.location %></td> <!-- Location -->
                            <td><%= project.supervisor %></td> <!-- Supervisor -->
                            <td><%= project.numberofworkers %></td> <!-- Number of Workers -->
                            <td>
                                <%= project.status %>
                                
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
