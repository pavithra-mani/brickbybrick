    <script>
        
        document.querySelectorAll(".acknowledge-btn").forEach(button => {
            button.addEventListener("click", () => {
                button.classList.toggle("acknowledged");
                button.innerText = button.classList.contains("acknowledged")
                    ? "Acknowledged"
                    : "Acknowledge";
            });
        });
    </script>
